<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".films.Film1">

    <ImageView
        android:id="@+id/imgFilm4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/detailsFilm4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avengerswarImg" />

    <TextView
        android:id="@+id/detailsFilm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailsFilm4"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgFilm4"
        app:layout_constraintTop_toBottomOf="@+id/imgFilm4" />
</androidx.constraintlayout.widget.ConstraintLayout>